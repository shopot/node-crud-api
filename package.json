{
  "name": "node-crud-api",
  "version": "1.0.0",
  "description": "Implement simple CRUD API using in-memory database underneath.",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsnd src/index.ts --watch ./src",
    "start:multi": "tsnd src/index.ts --watch ./src -- --with-balancer",
    "start:prod": "npm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "start:prod-multi": "npm run build && cross-env NODE_ENV=production node ./dist/index.js -- --with-balancer",
    "build": "tsc",
    "test": "jest ./__tests__",
    "test:verbose": "jest --verbose --detectOpenHandles ./__tests__",
    "lint": "tsc --noEmit && eslint ./src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "pretty": "prettier --write .",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopot/node-crud-api.git"
  },
  "author": "Sapronov Konstantin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shopot/node-crud-api/issues"
  },
  "homepage": "https://github.com/shopot/node-crud-api#readme",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  }
}
