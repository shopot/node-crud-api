{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": "."
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "prettier/prettier": [
      "error"
    ],
    "@typescript-eslint/no-var-reqiures": "off",
    "@typescript-eslint/ban-ts-comment": "error",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "ignorePatterns": [
    "node_modules"
  ]
}
